{
  "extends": "./tsconfig.build.json",
  "types": ["vite/client", "src"],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#*": ["./src*"]
    },
    "useDefineForClassFields": true
  }
}
